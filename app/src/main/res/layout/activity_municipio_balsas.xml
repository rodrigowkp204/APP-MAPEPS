<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_2"
    android:padding="40dp"
    tools:context=".MunicipioBalsas">

    <ImageView
        android:id="@+id/bt_voltar_municipio_balsas"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_voltar"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/title_municipio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70sp"
        android:text="@string/formacao_balsas"
        android:fontFamily="@font/signika_bold"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textColor="@color/azulPrincipal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/info_cursos_balsas"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/title_municipio"
        android:layout_marginTop="8dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentStart="true"
        app:layout_constraintTop_toBottomOf="@+id/title_municipio"/>

</androidx.constraintlayout.widget.ConstraintLayout>